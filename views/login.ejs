<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comment Section</title>
    <link rel="stylesheet" href="http://localhost:3001/stylesheets/login.css">
</head>
<body>
    <div class="flash" id="flash-container">
        <div class="flash-message">
    
            <% if (messages.success) { %>
                <div class="flash-message success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error) { %>
                <div class="flash-message error">
                    <%= messages.error %>
                </div>
            <% } %>
        </div>
  </div>
  
    <div class="background">
        <div class="img1">
            <img src="/images/Frontend-images/mandala.png" alt="mandala img">
        </div>
        <div class="img2">
            <img src="/images/Frontend-images/mandala.png" alt="mandala img">
        </div>
        <div class="box">
            <div class="container">
                <h1>Login</h1>
                <div class="img-container">
                    <div class="center-img">
                        <img class="img" src="/images/Frontend-images/user.png" alt="">
                    </div>
                </div>
                <form class="form" action="/users/login" method="post">
                    <input class="input" type="email" name="email" id="" placeholder="email">
                    <input class="input" type="password" name="password" id="" placeholder="password">
                    <input class="submit" type="submit" value="login">
                </form>
            </div>
        </div>
    </div>
</div>
    <script src='/javascripts/login.js'></script>
</body>
</html>
